<Page
    x:Class="ALWallet.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ALWallet"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource bg}">
        <StackPanel>
            <TextBlock x:ConnectionId='1' x:Name="appName"
                       Text="Wellcome to the ALWallet"
                       HorizontalAlignment="Center"
                       FontFamily="Verdana"
                       FontSize="34"
                       Foreground="Goldenrod"
                       FontWeight="Bold"
                       Margin="0 100 0 0">

            </TextBlock>
            <Button x:ConnectionId='2' Background="Transparent"
                    Width="100" Height="100"
                    HorizontalAlignment="Center"
                    Margin="0 100 0 0"                     >
                <Image Source="Assets/img/button_main_pushed_100.png" />
            </Button>
            <TextBlock x:ConnectionId='3' x:Name="txbUnderButton"
                       Text="START"
                       HorizontalAlignment="Center"
                       Margin="0 10"
                       FontFamily="Calibri"
                       FontSize="28"
                       Foreground="Green"
                       FontWeight="Bold"
                       />

        </StackPanel>
    </Grid>
</Page>

