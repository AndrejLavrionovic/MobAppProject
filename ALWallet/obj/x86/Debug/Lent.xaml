<Page
    x:Class="ALWallet.Lent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ALWallet"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource bg}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <RelativePanel>
            <Button x:ConnectionId='18' x:Name="btnHamburger"
                    FontFamily="Segoe MDL2 Assets"
                    Content="&#xE700;"
                    FontSize="36"
                                              
                    />
            <TextBlock x:ConnectionId='19' x:Name="tblAccountName"
                       FontFamily="Verdana"
                       FontSize="36"
                       FontWeight="Normal"
                       Foreground="#303030"
                       Margin="100, 0, 0, 0"
                       />
        </RelativePanel>

        <!--:::::::::::::::::::::::::::::::::::MAIN AREA::::::::::::::::::::::::::::::::::::::::::-->
        <StackPanel x:ConnectionId='1' x:Name="spMain"
                    Grid.Row="1"
                    Orientation="Vertical"
                    Margin="150, 50, 20, 20"
                    >
            <TextBlock Text="Lent" 
                       FontFamily="Verdana"
                       FontSize="16"
                       FontWeight="Normal"
                       Foreground="#404040"
                       />
            <StackPanel x:ConnectionId='9' x:Name="spDate"
                        Orientation="Horizontal"
                        Margin="0, 10, 0, 0">
                <TextBlock Text="Date:" 
                           Width="200"/>
                <DatePicker x:ConnectionId='17' HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            x:Name="dpDate"/>
            </StackPanel>
            <StackPanel x:ConnectionId='10' x:Name="spAmmount"
                        Orientation="Horizontal"
                        Margin="0, 10, 0, 0">
                <TextBlock Text="Ammount:" 
                           Width="200"/>
                <TextBox x:ConnectionId='16' x:Name="tbxAmmount"
                         Width="296"
                         />
            </StackPanel>
            <StackPanel x:ConnectionId='11' x:Name="spTo"
                        Orientation="Horizontal"
                        Margin="0, 10, 0, 0">
                <TextBlock Text="Lent to:" 
                           Width="200"/>
                <TextBox x:ConnectionId='15' x:Name="tbxTo" Width="296" />
            </StackPanel>
            <StackPanel x:ConnectionId='12' x:Name="spButtons"
                        Orientation="Horizontal"
                        Margin="200 40 20 20">
                <Button x:ConnectionId='14' x:Name="btnLend"
                        Content="Save"
                        Width="146"
                        Margin="0 0 8 0"
                        BorderBrush="Green"                      />
            </StackPanel>
            <StackPanel x:ConnectionId='13' x:Name="spMsg"
                        Orientation="Vertical"
                        Margin="0 20 0 0"/>

        </StackPanel>
        <!--::::::::::::::::::::::::::::::::END OF MAIN AREA::::::::::::::::::::::::::::::::::::::-->

        <SplitView x:ConnectionId='2' x:Name="splSideMenu"
                   Grid.Row="1"
                   DisplayMode="CompactOverlay"
                   OpenPaneLength="300"
                   CompactPaneLength="56"
                   HorizontalAlignment="Left">

            <SplitView.Pane>
                <ListBox x:ConnectionId='3' SelectionMode="Single"
                         x:Name="lbIcons"
                                                                    
                         Background="#9BFFA7">
                    <ListBoxItem x:ConnectionId='4' Name="lbiHome">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock 
                            FontFamily="Segoe MDL2 Assets"
                            Text="&#xE80F;"
                            FontSize="36"
                            />
                            <TextBlock Text="Home"
                                       FontSize="24"
                                       Margin="20,0,0,0"
                                       VerticalAlignment="Top"
                                   />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='5' Name="lbiTransactions">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock 
                            FontFamily="Segoe MDL2 Assets"
                            Text="&#xE8DF;"
                            FontSize="36"
                            />
                            <TextBlock Text="Transactions"
                                       FontSize="24"
                                       Margin="20,0,0,0"
                                       VerticalAlignment="Top"
                                   />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='6' Name="lbiBorrow">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock 
                            FontFamily="Segoe MDL2 Assets"
                            Text="&#xE109;"
                            FontSize="36"
                            />
                            <TextBlock Text="Borrow"
                                       FontSize="24"
                                       Margin="20,0,0,0"
                                       VerticalAlignment="Top"
                                   />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='7' Name="lbiLend">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock 
                            FontFamily="Segoe MDL2 Assets"
                            Text="&#xE108;"
                            FontSize="36"
                            />
                            <TextBlock Text="Lend"
                                       FontSize="24"
                                       Margin="20,0,0,0"
                                       VerticalAlignment="Top"
                                   />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='8' Name="lbiBack">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock 
                            FontFamily="Segoe MDL2 Assets"
                            Text="&#xE096;"
                            FontSize="36"
                            />
                            <TextBlock Text="Change Account"
                                       FontSize="24"
                                       Margin="20,0,0,0"
                                       VerticalAlignment="Top"
                                   />
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </SplitView.Pane>

        </SplitView>
    </Grid>
</Page>

